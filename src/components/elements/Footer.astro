---
import GroupFooterNav from "../blocks/GroupFooterNav.astro";
import Container from "../shared/Container.astro";
import FooterNav from "../shared/FooterNav.astro";
import Paragraph from "../shared/Paragraph.astro";

const footerServices = [
    {
        itemText: "Кримінальні справи",
        itemLink: "#services"
    },
    {
        itemText: "Цивільні справи",
        itemLink: "#services"
    },
    {
        itemText: "Господарські спори",
        itemLink: "#services"
    },
    {
        itemText: "Адміністративні справи",
        itemLink: "#services"
    }
]

const footerCompany = [
    {
        itemText: "Про нас",
        itemLink: "/about"
    },
    {
        itemText: "Команда",
        itemLink: "#team"
    },
    {
        itemText: "Контакти",
        itemLink: "#contact"
    },
    {
        itemText: "Блог",
        itemLink: "#blog"
    }
]

const footerLegal = [
    {
        itemText: "Політика конфіденційності",
        itemLink: "/privacy"
    },
    {
        itemText: "Умови використання",
        itemLink: "/terms"
    },
    {
        itemText: "Правова інформація",
        itemLink: "/legal"
    }
]
---
<div class="mt-16"></div>
<footer class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 dark:to-transparent pt-28 rounded-t-3xl">
    <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
            <span class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"></span>
            <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"></span>
            <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"></span>
        </div>
    </div>

    <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
            <span class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"></span>
            <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"></span>
            <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"></span>
        </div>
    </div>

    <Container className="pb-8 relative overflow-auto">
        <span class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 blur-2xl opacity-20 w-24 h-16 sm:w-48 sm:h-36 rounded-full rotate-12 skew-x-6 bg-primary"></span>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative">
            <div class="col-span-1 md:col-span-2 lg:col-span-1 h-auto flex flex-col">
                <div class="h-full">
                    <a href="/" class="relative flex items-center gap-3">
                        <svg width="40" height="40" viewBox="0 0 160 160" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-10 h-10">
                            <circle cx="80" cy="80" r="78" stroke="currentColor" stroke-width="4"/>
                            <circle cx="80" cy="80" r="70" fill="currentColor" fill-opacity="0.1"/>
                            <path d="M60 50h40v60H60z" stroke="currentColor" stroke-width="4" fill="none"/>
                            <path d="M70 50v60M90 50v60" stroke="currentColor" stroke-width="4"/>
                            <path d="M60 70h40M60 90h40" stroke="currentColor" stroke-width="4"/>
                            <text x="80" y="115" text-anchor="middle" font-family="Georgia, serif" font-size="14" fill="currentColor" font-weight="500">Lex Duo</text>
                        </svg>
                        <div class="inline-flex text-lg font-semibold text-heading-1">
                            Lex Duo
                        </div>
                    </a>
                    <Paragraph className={"mt-8"}>
                        Професійна юридична допомога в Києві. Захищаємо ваші права та інтереси в суді та поза ним.
                    </Paragraph>
                </div>

                <!-- Contact Information -->
                <div class="mt-8 space-y-4">
                    <div class="flex items-center gap-3 text-heading-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                        </svg>
                        <span>м. Київ, вул. Хрещатик, 1</span>
                    </div>
                    <div class="flex items-center gap-3 text-heading-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                        </svg>
                        <span>+380 44 123 4567</span>
                    </div>
                    <div class="flex items-center gap-3 text-heading-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                        </svg>
                        <span>info@lexduo.ua</span>
                    </div>
                </div>

                <!-- social links -->
                <div class="min-h-max flex items-center gap-4 text-heading-3 mt-8">
                    <a href="#" class="transition hover:text-heading-1 hover:scale-105">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                            <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                        </svg>
                        <span class="sr-only">Facebook</span>
                    </a>

                    <a href="#" class="transition hover:text-heading-1 hover:scale-105">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                            <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                        </svg>
                        <span class="sr-only">LinkedIn</span>
                    </a>

                    <a href="#" class="transition hover:text-heading-1 hover:scale-105">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="w-5 h-5" viewBox="0 0 16 16">
                            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                        </svg>
                        <span class="sr-only">Twitter</span>
                    </a>
                </div>
            </div>

            <div class="col-span-1 md:col-span-2 lg:col-span-2">
                <GroupFooterNav>
                    <FooterNav title={"Послуги"} navItems={footerServices}/>
                    <FooterNav title={"Компанія"} navItems={footerCompany}/>
                </GroupFooterNav>
            </div>

            <div class="col-span-1 md:col-span-2 lg:col-span-1">
                <GroupFooterNav>
                    <FooterNav title={"Правова інформація"} navItems={footerLegal}/>
                </GroupFooterNav>
            </div>
        </div>

        <div class="mt-16 pt-8 border-t border-box-border text-center text-heading-3">
            <p>&copy; {new Date().getFullYear()} Lex Duo. Всі права захищені.</p>
        </div>
    </Container>
</footer>
